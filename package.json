{
  "name": "markdown-wysiwyg",
  "publisher": "tejasvi",
  "displayName": "Markdown WYSIWYG",
  "description": "Preview markdown inline",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.56.0"
  },
  "license": "MIT",
  "categories": [
    "Programming Languages",
    "Formatters",
    "Visualization",
    "Themes",
    "Other"
  ],
  "keywords": [
    "markdown",
    "preview",
    "inline",
    "latex",
    "typora"
  ],
  "author": {
    "name": "Tejasvi S. Tomar",
    "url": "https://mefyi.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/tejasvi/markdown-wysiwig"
  },
  "icon": "assets/logo.png",
  "bugs": {
    "url": "https://github.com/tejasvi/markdown-wysiwig/issues"
  },
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./src/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "markdownWysiwyg",
          "icon": "assets/activityBar.svg",
          "title": ""
        }
      ]
    },
    "views": {
      "markdownWysiwyg": [
        {
          "type": "webview",
          "id": "test.webview",
          "name": "",
          "visibility": "visible"
        }
      ]
    },
    "keybindings": [
      {
        "command": "markdown.wysiwyg.toggle",
        "key": "ctrl+shift+m",
        "when": "resourceLangId == markdown"
      }
    ],
    "commands": [
      {
        "command": "test.eval",
        "title": "Eval webview"
      },
      {
        "command": "markdown.wysiwyg.toggle",
        "title": "Toggle Inline Preview",
        "category": "Markdown WYSIWYM",
        "enablement": "resourceLangId == markdown",
        "icon": {
          "dark": "./assets/toggle.svg",
          "light": "./assets/toggle.svg"
        }
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == markdown",
          "command": "markdown.wysiwyg.toggle",
          "group": "navigation"
        }
      ]
    },
    "configuration": [
      {
        "title": "Markdown WYSIWYG",
        "properties": {
          "markdown.wysiwyg.emphasis": {
            "description": "Decorate bold, italics and strikethrough",
            "type": "boolean",
            "default": true
          },
          "markdown.wysiwyg.heading": {
            "description": "Decorate headings",
            "type": "boolean",
            "default": true
          },
          "markdown.wysiwyg.horizontalRule": {
            "description": "Decorate horizontal rule",
            "type": "boolean",
            "default": true
          },
          "markdown.wysiwyg.inlineCode": {
            "description": "Decorate inline code",
            "type": "boolean",
            "default": true
          },
          "markdown.wysiwyg.inlineImage.enabled": {
            "description": "Enable image preview",
            "type": "boolean",
            "default": true
          },
          "markdown.wysiwyg.inlineImage.autoPreview": {
            "description": "Preview images automatically",
            "type": "boolean",
            "default": true
          },
          "markdown.wysiwyg.mermaid": {
            "description": "Render mermaid diagrams",
            "type": "boolean",
            "default": true
          },
          "markdown.wysiwyg.latex": {
            "description": "Render LaTeX",
            "type": "boolean",
            "default": true
          },
          "markdown.wysiwyg.list": {
            "description": "Decorate lists",
            "type": "boolean",
            "default": true
          },
          "markdown.wysiwyg.quote": {
            "description": "Decorate quotes",
            "type": "boolean",
            "default": true
          },
          "markdown.wysiwyg.table": {
            "description": "Render tables",
            "type": "boolean",
            "default": true
          },
          "markdown.wysiwyg.html": {
            "description": "Decorate HTML tags",
            "type": "boolean",
            "default": true
          },
          "markdown.wysiwyg.link": {
            "description": "Decorate link and image urls",
            "type": "boolean",
            "default": true
          },
          "markdown.wysiwyg.hoverImage": {
            "description": "Preview image on hover",
            "type": "boolean",
            "default": true
          },
          "markdown.wysiwyg.cursorDisables": {
            "description": "Disable concealment around the cursor and selection",
            "type": "boolean",
            "default": true
          }
        }
      }
    ]
  },
  "dependencies": {
    "cheerio": "^1.0.0-rc.9",
    "hast-util-to-html": "^7.1.3",
    "mathjax-full": "^3.1.4",
    "mdast-util-to-hast": "^10.2.0",
    "mermaid": "^8.10.1",
    "remark-gfm": "^1.0.0",
    "remark-math": "^4.0.0",
    "remark-parse": "^9.0.0",
    "unified": "^9.2.1"
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.56.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  }
}
